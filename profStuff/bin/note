cd `cat ~/.git_root`
project=$1
if [[ $project = *[!\ ]* ]]; then
  echo "recording note for project " $project
else
  echo "project consists of spaces only, aborting"
  exit 1;
fi
cd $project
git config --global core.editor "/usr/bin/emacs"
date > .update-${project}
git add .
git commit
~/bin/push_project ${project}
